# Flask Configuration
FLASK_ENV=production
DEBUG=False

# Security (CRITICAL - GENERATE NEW KEYS!)
# SECRET_KEY: Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_GENERATE_NEW_SECRET_KEY_HERE

# ENCRYPTION_KEY: Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=CHANGE_ME_GENERATE_NEW_ENCRYPTION_KEY_HERE

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

